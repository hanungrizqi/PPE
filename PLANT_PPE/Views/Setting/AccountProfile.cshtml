
@{
    ViewBag.Title = "User";
    ViewBag.JS = "/Scripts/Page/SettingAccountProfile.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">Setting Account Profile</h2>
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            Table Account Profile <small>Set Account Profile's</small>
        </h3>
        <div class="block-options">
            <div class="block-options-item">
                <button type="button" class="btn btn-success py-2 mb-0" data-bs-toggle="modal" data-bs-target="#modal_insert">
                    <i class="fa fa-add opacity-50 me-1"></i> Add Account Profile
                </button>
            </div>
        </div>
    </div>
    <div class="block-content block-content-full">
        <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive w-100" id="tbl_accprofile">
            <thead class="text-center">
                <tr>
                    <th>ACCOUNT PROFILE</th>
                    <th>DISTRICT</th>
                    <th>LOCATION</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="modal_insert" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Register Account Profile</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="txt_accprofile">Account Profile</label>
                        <input type="number" class="form-control" id="txt_accprofile" name="txt_accprofile">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_district">District</label>
                        <select class="js-select2 form-select select2-modal" id="txt_district" name="txt_district" style="width: 100%;">
                            <option></option>
                            @foreach (var item in ViewBag.DistrictLoc)
                            {
                                <option value="@item.DSTRCT_CODE">@item.DSTRCT_CODE</option>
                            }
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_location">Location</label>
                        <select class="js-select2 form-select select2-modal" id="txt_location" name="txt_location" style="width: 100%;">
                            <option></option>
                            @foreach (var item in ViewBag.DistrictLoc)
                            {
                                <option value="@item.EQUIP_LOCATION">@item.EQUIP_LOCATION</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="insertAcct()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@*Modal Update source*@
<div class="modal" id="modal_update" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Edit Account Profile</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <input type="text" name="txt_id" id="txt_id" hidden />
                        <label class="form-label" for="txt_accprof_update">ACCOUNT PROFILE</label>
                        <input type="number" class="form-control" id="txt_accprof_update" name="txt_accprof_update">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_distrik_update">DISTRICT</label>
                        <input type="text" class="form-control" id="txt_distrik_update" name="txt_distrik_update">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_lokasi_update">LOCATION</label>
                        <input type="text" class="form-control" id="txt_lokasi_update" name="txt_lokasi_update">
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="updateSurce()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@*END Modal Update source*@