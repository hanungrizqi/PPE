
@{
    ViewBag.Title = "Menu";
    ViewBag.JS = "/Scripts/Page/SettingMenu.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">Setting Profile</h2>

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            Table Menu <small>Set Group's Profile</small>
        </h3>
    </div>
    <div class="block-content block-content-full">
        <div class="row mb-4">
            <label class="col-sm-1 col-form-label" for="txt_group">Group :</label>
            <div class="col-sm-11">
                <select class="form-control form-control-sm" id="txt_group">
                    @foreach (var item in ViewBag.Group)
                    {
                        if (item.ID == 1)
                        {
                            <option value="@item.ID" selected="selected">@item.RoleName</option>
                        }
                        else
                        {
                            <option value="@item.ID">@item.RoleName</option>
                        }
                    }
                </select>
            </div>
        </div>

        <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive w-100" id="tbl_menu">
            <thead class="text-center">
                <tr>
                    <th class="w-25">Is Allow</th>
                    <th>Menu</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>