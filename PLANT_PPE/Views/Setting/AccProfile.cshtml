
@{
    ViewBag.Title = "Account Profile";
    ViewBag.JS = "/Scripts/Page/SettingAccProfile.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">Setting Account Profile</h2>
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            Table Data <small>Set Account Profile</small>
        </h3>
        <div class="block-options">
            <div class="block-options-item">
                <button type="button" class="btn btn-success py-2 mb-0" data-bs-toggle="modal" data-bs-target="#modal-insert">
                    <i class="fa fa-add opacity-50 me-1"></i> Add
                </button>
            </div>
        </div>
    </div>
    <div class="block-content block-content-full">
        <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive w-100" id="tbl_accp">
            <thead class="text-center">
                <tr>
                    <th>DISTRICT</th>
                    <th>EQUIPMENT LOCATION</th>
                    <th>EQUIPMENT DESC</th>
                    <th>ACTIVE FLAG</th>
                    <th>PRODUCTION EQUIPMENT</th>
                    <th>SUPPORT EQUIPMENT</th>
                    <th>WORKSHOP EQUIPMENT</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="modal-insert" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Add Account Profile</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="txt_district">District</label>
                        <select class="js-select2 form-select" id="txt_district" name="txt_district" style="width: 100%;">
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_loc">Equipment Location</label>
                        <select class="js-select2 form-select" id="txt_loc" name="txt_loc" style="width: 100%;">
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_desc">Equipment Desc</label>
                        <input type="text" class="form-control" id="txt_desc" name="txt_desc" readonly>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="flag">Active Flag (Y/N)</label>
                        <input type="text" class="form-control" id="flag" name="flag">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="prodeqp">Production Equipment</label>
                        <input type="text" class="form-control" id="prodeqp" name="prodeqp">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="suppeqp">Support Equipment</label>
                        <input type="text" class="form-control" id="suppeqp" name="suppeqp">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="wseqp">Workshop Equipment</label>
                        <input type="text" class="form-control" id="wseqp" name="wseqp">
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="insertDist()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal_update" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Edit data</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <input type="text" name="txt_id" id="txt_id" hidden />
                        <label class="form-label" for="txt_district_update">District</label>
                        <select class="js-select2 form-select" id="txt_district_update" name="txt_district_update" style="width: 100%;">
                        </select>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="txt_loc_update">Equipment Location</label>
                        <select class="js-select2 form-select" id="txt_loc_update" name="txt_loc_update" style="width: 100%;">
                        </select>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="txt_desc_update">Equipment Desc</label>
                        <input type="text" class="form-control" id="txt_desc_update" name="txt_desc_update" readonly>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="flag_update">Active Flag (Y/N)</label>
                        <input type="text" class="form-control" id="flag_update" name="flag_update">
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="prodeqp_update">Production Equipment</label>
                        <input type="text" class="form-control" id="prodeqp_update" name="prodeqp_update">
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="suppeqp_update">Support Equipment</label>
                        <input type="text" class="form-control" id="suppeqp_update" name="suppeqp_update">
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="wseqp_update">Workshop Equipment</label>
                        <input type="text" class="form-control" id="wseqp_update" name="wseqp_update">
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="updateAccountDL()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>