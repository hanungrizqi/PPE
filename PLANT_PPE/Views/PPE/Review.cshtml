
@{
    ViewBag.Title = "Review";
    ViewBag.JS = "/Scripts/Page/Review.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">Review Permohonan Pemindahan Equipment</h2>
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            Table Review <small>Permohonan Pemindahan Equipment</small>
        </h3>
    </div>
    <div class="block-content block-content-full">
        <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive w-100" id="tbl_reviewppe">
            <thead class="text-center bg-primary text-white">
                <tr>
                    <th>PPE NO</th>
                    <th>EGI</th>
                    <th>EQUIP NO</th>
                    <th>DISTRICT FROM</th>
                    <th>DISTRICT TO</th>
                    <th>CREATED DATE</th>
                    <th>POSISI PPE</th>
                    <th>STATUS</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@*<div class="modal" id="modal-detail" tabindex="-1" aria-labelledby="modal-large" aria-hidden="true" aria-modal="true" role="dialog">*@
<div class="modal fade" id="modal-detail" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Review PPE</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close" onclick="detailClose()">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="row">
                        <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive w-100" id="tbl_detail">
                            <thead class="text-center bg-primary text-white">
                                <tr>
                                    <th>POSITION</th>
                                    <th>NRP</th>
                                    <th>NO QUIPMENT</th>
                                    <th>APPROVED DATE</th>
                                    <th>FORM CAAB</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal" onclick="detailClose()">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
